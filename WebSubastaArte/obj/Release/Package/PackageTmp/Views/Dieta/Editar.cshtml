

<!DOCTYPE html>
<html>
<head>
    <title>Editar Dieta</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <h1 class="mt-5">Editar Dieta</h1>

        <form action="@Url.Action("Actualizar", "Dieta")" method="post" class="mt-4">
            <input type="hidden" name="Id" value="@ViewBag.Id" />

            <div class="form-group">
                <label>ID de Usuario:</label>
                <input type="text" name="Email" value="@ViewBag.Correo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Fecha de la Comida:</label>
                <input type="text" name="FechaComida" value="@ViewBag.FechaComida" class="form-control" />
            </div>
            <div class="form-group">
                <label>Tipo de Comida:</label>
                <input type="text" name="TipoComida" value="@ViewBag.TipoComida" class="form-control" />
            </div>
            <div class="form-group">
                <label>Alimentos Consumidos:</label>
                <input type="text" name="AlimentosConsumidos" value="@ViewBag.AlimentosConsumidos" class="form-control" />
            </div>
            <div class="form-group">
                <label>Calorías Totales:</label>
                <input type="text" name="CaloriasTotales" value="@ViewBag.CaloriasTotales" class="form-control" />
            </div>
            <div class="form-group">
                <label>Comentarios:</label>
                <input type="text" name="Comentarios" value="@ViewBag.Comentarios" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
    </div>

</body>
</html>